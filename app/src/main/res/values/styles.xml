<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TimeRangeCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="TimeRangeTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TimeRangeValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="StatisticText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="BreathingExerciseCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/purple_200</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/purple_500</item>
    </style>

    <style name="BreathingCardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="BreathingInfoText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:background">@drawable/breathing_info_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="NotificationDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources> 